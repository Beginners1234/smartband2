<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.iitd.assistech.smartband.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <!-- our tablayout to display tabs  -->
    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <!-- View pager to swipe views -->
    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"/>

    <TextView
        android:id="@+id/hornText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vehicle Horn"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/micReadButton"
        android:layout_alignStart="@+id/micReadButton" />

    <TextView
        android:id="@+id/hornValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Starting..."
        android:layout_alignBaseline="@+id/hornText"
        android:layout_alignBottom="@+id/hornText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/cryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Baby Cry"
        android:layout_below="@+id/hornText"
        android:layout_alignLeft="@+id/hornText"
        android:layout_alignStart="@+id/hornText" />

    <TextView
        android:id="@+id/cryValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Starting..."
        android:layout_alignTop="@+id/cryText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/ambientText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:text="Ambient Sound"
        android:layout_below="@+id/cryText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/ambientValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Starting..."
        android:layout_alignBaseline="@+id/ambientText"
        android:layout_alignBottom="@+id/ambientText"
        android:layout_alignLeft="@+id/cryValue"
        android:layout_alignStart="@+id/cryValue" />


    <Button
        android:id="@+id/micReadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="processMicSound"
        android:text="Read Mic"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/ambientText"
        android:layout_alignEnd="@+id/ambientText" />

    <Button
        android:id="@+id/stopRecordButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="stopRecording"
        android:text="Stop Record"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
